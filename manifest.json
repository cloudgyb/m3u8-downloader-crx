{
  "manifest_version": 3,
  "name": "M3U8 Downloader",
  "version": "1.0.0",
  "description": "M3U8 Downloader，m3u8 流媒体视频下载器插件",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
    "default_title": "M3U8 Downloader，m3u8 流媒体视频下载器插件",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
  ],
  "homepage_url": "https://github.com/cloudgyb/m3u8-downloader-crx",
  "default_locale": "zh_CN"
}